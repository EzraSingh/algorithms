{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": ["dom", "es2017"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "baseUrl": "src",
    "paths": {
      "@structures": [ "structures/*" ],
      "@algorithms": [ "algorithms/*" ]
    }
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": [
    "node_modules"
  ]
}
